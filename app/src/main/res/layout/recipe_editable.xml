<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgRecipe"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        app:srcCompat="@android:drawable/ic_menu_crop" />

    <TextView
        android:id="@+id/lblrName"
        android:text="@string/recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dp"/>

    <EditText
        android:id="@+id/fName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Name of the recipe..."
        android:layout_margin="20.0dp"
        android:background="@color/colorList"/>

    <TextView
        android:id="@+id/lblrType"
        android:text="@string/recipe_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dp"/>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        layout="@layout/recipetypes"/>

    <TextView
        android:id="@+id/lblrIngredients"
        android:text="@string/recipe_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dp"/>

    <EditText
        android:id="@+id/fIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Ingredients needed..."
        android:layout_margin="20.0dp"
        android:lines="3"
        android:scrollHorizontally="false"
        android:background="@color/colorList"/>

    <TextView
        android:id="@+id/lblrSteps"
        android:text="@string/recipe_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dp"/>

    <EditText
        android:id="@+id/fSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dp"
        android:background="@color/colorList"
        android:hint="  Steps to cook..."
        android:lines="5"
        android:scrollHorizontally="false" />

</LinearLayout>
